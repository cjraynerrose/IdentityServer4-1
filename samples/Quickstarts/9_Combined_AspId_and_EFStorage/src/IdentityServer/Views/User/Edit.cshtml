@model IdentityServer.Quickstart.User.UserInputModel
@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<form asp-action="Edit" method="post">
    <input class="hide" asp-for="Id" hidden />

    <div class="form-group">
        <label asp-for="UserName"></label>
        <input class="form-control" asp-for="UserName" />
        <span class="text-danger" asp-validation-for="UserName"></span>
    </div>
    <div class="form-group">
        <label asp-for="Email"></label>
        <input class="form-control" asp-for="Email" />
        <span class="text-danger" asp-validation-for="Email"></span>
    </div>
    <div class="form-group">
        <label asp-for="PhoneNumber"></label>
        <input class="form-control" asp-for="PhoneNumber" />
        <span class="text-danger" asp-validation-for="PhoneNumber"></span>
    </div>
    <div class="form-group">
        <label asp-for="RoleName"></label>
        <select class="form-control" asp-for="RoleName"
                asp-items="@(new SelectList(ViewBag.roles,"Name","Name", Model.RoleName))">
            <option>Please select one</option>
        </select>
        <span class="table-danger" asp-validation-for="RoleName"></span>
    </div>

    <div class="form-group">
        <input class="btn btn-primary" type="submit" value="Save"
               asp-action="Edit" asp-controller="User" formmethod="post"/>
        <a class="btn btn-info ml-1" asp-action="Index" asp-controller="User">Back to List</a>
    </div>
</form>

